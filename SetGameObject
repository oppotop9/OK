using System.Collections;
using System.Collections.Generic;
using UnityEngine;

public class SetGameObject : MonoBehaviour
{
    public GameObject BoxIncorrectIM;
    public GameObject BoxCorrectIM;
    public GameObject ButtonNext;
   // public GameObject ButtonCheckVocab;
    public GameObject ImageVocabCK;


    void Start()
    {
        BoxIncorrectIM.SetActive(false);
        BoxCorrectIM.SetActive(false);
       // ButtonCheckVocab.SetActive(false);
        ImageVocabCK.SetActive(false);
        ButtonNext.SetActive(false);

    }
    public void ButtonSandwich()
    {
        BoxCorrectIM.SetActive(true);
        BoxIncorrectIM.SetActive(false);
        ButtonNext.SetActive(true);
        //ButtonCheckVocab.SetActive(true);
        ImageVocabCK.SetActive(true);
    }
    //public void ButtonCheckVocab()
    //{

    //    ImageVocabCK.SetActive(true);
    //}

    public void ButtonSandbox()
    {
        BoxIncorrectIM.SetActive(true);
        BoxCorrectIM.SetActive(false);
        ButtonNext.SetActive(false);
        ImageVocabCK.SetActive(false);
    }
    public void ButtonSandalwood()
    {
        BoxIncorrectIM.SetActive(true);
        BoxCorrectIM.SetActive(false);
        ButtonNext.SetActive(false);
        ImageVocabCK.SetActive(false);
    }
    public void ButtonSandbag()
    {
        BoxIncorrectIM.SetActive(true);
        BoxCorrectIM.SetActive(false);
        ButtonNext.SetActive(false);
        ImageVocabCK.SetActive(false);
    }
    public void ButtonSandpaper()
    {
        BoxIncorrectIM.SetActive(true);
        BoxCorrectIM.SetActive(false);
        ButtonNext.SetActive(false);
        ImageVocabCK.SetActive(false);
    }




}
